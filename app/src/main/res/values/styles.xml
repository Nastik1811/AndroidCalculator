<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>



    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Attributes from androidx.appcompat.gridlayout -->
        <item name="layout_gravity">fill</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="ButtonStyle.Operator">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:opacity">transparent</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">27sp</item>
        <item name="android:maxWidth">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="BasicGrid">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">7</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonStyle.Toggle">
        <item name="backgroundTint">@color/onColorSecondary</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="ResultView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">30sp</item> />"
    </style>
</resources>
