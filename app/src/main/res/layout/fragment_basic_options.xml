<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pad_numeric"
    style="@style/BasicGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="5">

    <Button
        android:id="@+id/clear"
        style="@style/ButtonStyle"
        android:text="CA"
        app:layout_column="0"
        app:layout_row="0" />

    <Button
        android:id="@+id/l_bracket"
        style="@style/ButtonStyle"
        android:text="@string/l_bracket"
        app:layout_column="1"
        app:layout_row="0" />

    <Button
        android:id="@+id/r_bracket"
        style="@style/ButtonStyle"
        android:text="@string/r_bracket"
        app:layout_column="2"
        app:layout_row="0" />
    <Button
        android:id="@+id/plus"
        style="@style/ButtonStyle.Operator"
        android:text="@string/plus"
        android:backgroundTint="#55F52C69"
        app:layout_column="3"
        app:layout_row="0" />
    <Button
        android:id="@+id/digit_7"
        style="@style/ButtonStyle"
        android:text="@string/seven"
        app:layout_column="0"
        app:layout_row="1" />

    <Button
        android:id="@+id/digit_8"
        style="@style/ButtonStyle"
        android:text="@string/eight"
        app:layout_column="1"
        app:layout_row="1" />

    <Button
        android:id="@+id/digit_9"
        style="@style/ButtonStyle"
        android:text="@string/nine"
        app:layout_column="2"
        app:layout_row="1" />

    <Button
        android:id="@+id/minus"
        style="@style/ButtonStyle.Operator"
        android:backgroundTint="#77F52C69"
        android:text="@string/minus"
        app:layout_column="3"
        app:layout_row="1" />

    <Button
        android:id="@+id/digit_4"
        style="@style/ButtonStyle"
        android:text="@string/four"
        app:layout_column="0"
        app:layout_row="2" />

    <Button
        android:id="@+id/digit_5"
        style="@style/ButtonStyle"
        android:text="@string/five"
        app:layout_column="1"
        app:layout_row="2" />

    <Button
        android:id="@+id/digit_6"
        style="@style/ButtonStyle"
        android:text="@string/six"
        app:layout_column="2"
        app:layout_row="2" />

    <Button
        android:id="@+id/devision"
        style="@style/ButtonStyle.Operator"
        android:backgroundTint="#99F52C69"
        android:text="@string/division"
        app:layout_column="3"
        app:layout_row="2" />

    <Button
        android:id="@+id/digit_1"
        style="@style/ButtonStyle"
        android:text="@string/one"
        app:layout_column="0"
        app:layout_row="3" />

    <Button
        android:id="@+id/digit_2"
        style="@style/ButtonStyle"
        android:text="@string/two"
        app:layout_column="1"
        app:layout_row="3" />

    <Button
        android:id="@+id/digit_3"
        style="@style/ButtonStyle"
        android:text="@string/three"
        app:layout_column="2"
        app:layout_row="3" />

    <Button
        android:id="@+id/product"
        style="@style/ButtonStyle.Operator"
        android:text="@string/multiplication"
        android:backgroundTint="#CCF52C69"
        app:layout_column="3"
        app:layout_row="3" />

    <Button
        android:id="@+id/decimal_point"
        style="@style/ButtonStyle"
        android:text="@string/dec_point"
        app:layout_column="0"
        app:layout_row="4" />

    <Button
        android:id="@+id/digit_0"
        style="@style/ButtonStyle"
        android:text="@string/zero"
        app:layout_column="1"
        app:layout_row="4"
        app:layout_columnSpan="2"/>
    <Button
        android:id="@+id/eq_sign"
        style="@style/ButtonStyle.Operator"
        android:text="@string/eq"
        app:layout_column="3"
        app:layout_row="4" />



</androidx.gridlayout.widget.GridLayout>