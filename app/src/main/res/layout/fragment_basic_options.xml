<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pad_numeric"
    style="@style/BasicGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="5">


    <Button
        android:id="@+id/l_bracket"
        style="@style/ButtonStyle"
        android:text="@string/l_bracket" />

    <Button
        android:id="@+id/r_bracket"
        style="@style/ButtonStyle"
        android:text="@string/r_bracket"/>

    <Button
        android:id="@+id/reminder"
        style="@style/ButtonStyle"
        android:text="@string/reminder" />

    <Button
        android:id="@+id/clear"
        style="@style/ButtonStyle.Operator"
        android:fontFamily="monospace"
        android:text="@string/clear"
        android:backgroundTint="#DDF52C69"/>

    <Button
        android:id="@+id/digit_7"
        style="@style/ButtonStyle"
        android:text="@string/seven" />

    <Button
        android:id="@+id/digit_8"
        style="@style/ButtonStyle"
        android:text="@string/eight" />

    <Button
        android:id="@+id/digit_9"
        style="@style/ButtonStyle"
        android:text="@string/nine" />
    <Button
        android:id="@+id/product"
        style="@style/ButtonStyle.Operator"
        android:text="@string/multiplication"
        android:backgroundTint="#CCF52C69" />

    <Button
        android:id="@+id/digit_4"
        style="@style/ButtonStyle"
        android:text="@string/four"/>

    <Button
        android:id="@+id/digit_5"
        style="@style/ButtonStyle"
        android:text="@string/five"
        app:layout_column="1"
        app:layout_row="2" />

    <Button
        android:id="@+id/digit_6"
        style="@style/ButtonStyle"
        android:text="@string/six"/>

    <Button
        android:id="@+id/division"
        style="@style/ButtonStyle.Operator"
        android:backgroundTint="#99F52C69"
        android:text="@string/division" />

    <Button
        android:id="@+id/digit_1"
        style="@style/ButtonStyle"
        android:text="@string/one" />

    <Button
        android:id="@+id/digit_2"
        style="@style/ButtonStyle"
        android:text="@string/two" />

    <Button
        android:id="@+id/digit_3"
        style="@style/ButtonStyle"
        android:text="@string/three" />
    <Button
        android:id="@+id/minus"
        style="@style/ButtonStyle.Operator"
        android:backgroundTint="#77F52C69"
        android:text="@string/minus" />

    <Button
        android:id="@+id/decimal_point"
        style="@style/ButtonStyle"
        android:text="@string/dec_point"/>

    <Button
        android:id="@+id/digit_0"
        style="@style/ButtonStyle"
        android:text="@string/zero"/>
    <Button
        android:id="@+id/eq_sign"
        style="@style/ButtonStyle.Operator"
        android:backgroundTint="#11F52C69"
        android:text="@string/eq"/>

    <Button
        android:id="@+id/plus"
        style="@style/ButtonStyle.Operator"
        android:text="@string/plus"
        android:backgroundTint="#55F52C69" />

</androidx.gridlayout.widget.GridLayout>