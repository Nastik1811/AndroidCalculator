<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicOperstionsFragment">



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/digit_7"
            style="@style/ButtonStyle"
            android:text="@string/seven" />

        <Button
            android:id="@+id/digit_8"
            style="@style/ButtonStyle"
            android:text="@string/eight" />

        <Button
            android:id="@+id/digit_9"
            style="@style/ButtonStyle"
            android:text="@string/nine" />

        <Button
            android:id="@+id/minus"
            style="@style/ButtonStyle.Operator"
            android:text="@string/minus" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/digit_4"
            style="@style/ButtonStyle"
            android:text="@string/four" />

        <Button
            android:id="@+id/digit_5"
            style="@style/ButtonStyle"
            android:text="@string/five" />

        <Button
            android:id="@+id/digit_6"
            style="@style/ButtonStyle"
            android:text="@string/six" />

        <Button
            android:id="@+id/devision"
            style="@style/ButtonStyle.Operator"
            android:text="@string/devide" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/digit_1"
            style="@style/ButtonStyle"
            android:text="@string/one" />

        <Button
            android:id="@+id/digit_2"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two" />

        <Button
            android:id="@+id/digit_3"
            style="@style/ButtonStyle"
            android:text="@string/three" />

        <Button
            android:id="@+id/product"
            style="@style/ButtonStyle.Operator"
            android:text="@string/product" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <Button
            android:id="@+id/decimal_point"
            style="@style/ButtonStyle"
            android:text="@string/dec_point" />

        <Button
            android:id="@+id/digit_0"
            style="@style/ButtonStyle"
            android:text="@string/zero" />

        <Button
            android:id="@+id/eq_sign"
            style="@style/ButtonStyle"
            android:text= "@string/eq_sign"/>
        <Button
            android:id="@+id/delete"
            style="@style/ButtonStyle.Operator"
            android:text="@string/plus" />

    </TableRow>


</TableLayout>